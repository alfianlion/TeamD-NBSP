@model IEnumerable<NBSP.Models.Volunteer>
@{
    Layout = "~/Views/Shared/_LayoutAdminMenu.cshtml";
}
@if (Model.ToList().Count > 0)
{
    <div class="table-responsive">
        <table id="viewProduct" class="table table-striped table-bordered">
            <thead class="thead-dark">
                <tr>
                    <th>Name</th>
                    <th>Email</th>
                    <th>Phone Number</th>
                    <th>D.O.B</th>
                    <th>Gender</th>
                    <th>Avaliability</th>
                    <th>Skill Sets</th>
                </tr>
            </thead>
            <tbody>
                @{string MonA = "";}
                @{string TueA = "";}
                @{string WedA = "";}
                @{string ThurA = "";}
                @{string FriA = "";}
                @{string SatA = "";}
                @{string SunA = "";}
                @{string ChildA = "";}
                @{string ChoresA = "";}
                @{DateTime nulldatetime = new DateTime(0001, 01, 01);}
                @{ string nulldate = "Not Given";}
                @foreach (var item in Model)
                {
                    MonA = "";
                    TueA = "";
                    WedA = "";
                    ThurA = "";
                    FriA = "";
                    SatA = "";
                    SunA = "";
                    ChildA = "";
                    ChoresA = "";
                    @if (item.Mon == true)
                    {
                        MonA = "Mon ";
                    }
                    @if (item.Tue == true)
                    {
                        TueA = "Tue ";
                    }
                    @if (item.Wed == true)
                    {
                        WedA = "Wed ";
                    }
                    @if (item.Thur == true)
                    {
                        ThurA = "Thur ";
                    }
                    @if (item.Fri == true)
                    {
                        FriA = "Fri ";
                    }
                    @if (item.Sat == true)
                    {
                        SatA = "Sat ";
                    }
                    @if (item.Sun == true)
                    {
                        SunA = "Sun ";
                    }
                    @if (item.Childcare == true)
                    {
                        ChildA = "Childcare ";
                    }
                    @if (item.Chores == true)
                    {
                        ChoresA = "Chores ";
                    }
                    <tr>
                        <th>@item.Name</th>
                        <th>@item.EmailAddr</th>
                        <th>@item.ContactNo.ToString()</th>
                        <th>
                            @if (item.DOB == nulldatetime)
                            {
                                @nulldate
                            }
                            else
                            {
                                @item.DOB.ToString()
                            }

                        </th>
                        <th>@item.Gender.ToString()</th>
                        <th>@MonA @TueA @WedA @ThurA @FriA @SatA @SunA</th>
                        <th>@ChildA @ChoresA </th>
                        <td>
                            <a asp-action="Delete" asp-controller="Admin"
                               asp-route-id="@item.Name">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <span style="color:red">No volunteers found!</span>
}



