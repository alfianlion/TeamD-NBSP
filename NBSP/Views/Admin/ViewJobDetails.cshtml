@model NBSP.Models.Job

@{
    ViewData["Title"] = "ViewJob";
    Layout = "~/Views/Shared/_LayoutAdminMenu.cshtml";
}

<h1>ViewJob</h1>

<p>
    JobDetails
</p>
<fieldset class="FormContent">
    <div class="form-group row">
        <label asp-for="JobName" class="col-sm-3 col-form-label"></label>
        <div class="col-sm-9 form-control-plaintext">
            @Html.Display("Name")
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="Description" class="col-sm-3 col-form-label"></label>
        <div class="col-sm-9 form-control-plaintext">
            @Html.Display("Description")
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="Salary" class="col-sm-3 col-form-label"></label>
        <div class="col-sm-9 form-control-plaintext">
            @Html.Display("Salary")
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="PhoneNo" class="col-sm-3 col-form-label"></label>
        <div class="col-sm-9 form-control-plaintext">
            @Html.Display("PhoneNo")
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="EmailAddr" class="col-sm-3 col-form-label"></label>
        <div class="col-sm-9 form-control-plaintext">
            @Html.Display("EmailAddr")
        </div>
    </div>
</fieldset>

