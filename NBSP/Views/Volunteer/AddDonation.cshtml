@model NBSP.Models.Donation

@{
    ViewData["Title"] = "AddDonation";
    Layout = "~/Views/Shared/_LayoutVolunteerMenu.cshtml";
}
<head>
    <style>

        .container {
            display: flex;
            justify-content: center;
        }

        .border-box {
            border-radius: 25px;
            background: #BEBED8;
            padding: 20px;
            width: 750px;
            height: 500px;
            color: white;
            text-align: center;
            font-size: 20px;
            display: flex;
            justify-content: center;
            align-items: center;
        }

        .myButton {
            margin: 10px;
            border-color: white;
            width: 30%;
        }

        .Nametxt {
            color: black;
        }

        .Moneytxt {
            color: black;
        }

        .Desctxt {
            color: black;
        }

        .Phnotxt {
            color: black;
        }
    </style>
</head>
<div class="container">
    <div class="border-box">
        <form asp-controller="Home" asp-action="AddDonation" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="Nametxt">Name</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Money" class="Moneytxt"></label>
                <input asp-for="Money" class="form-control" />
                <span asp-validation-for="Money" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="Desctxt"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PhoneNo" class="Phnotxt">Phone Number</label>
                <input asp-for="PhoneNo" class="form-control" />
                <span asp-validation-for="PhoneNo" class="text-danger"></span>
            </div>
            <div class="button-box">
                <input type="submit" class="myButton" style="background-color: #41C1BA; width:100%;" value="Donate" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

