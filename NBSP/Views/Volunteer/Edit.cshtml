@model NBSP.Models.Volunteer

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_LayoutVolunteerMenu.cshtml";
}

<h4 class="PageTitle">Edit Profile</h4>
<hr />
<form asp-controller="Volunteer" asp-action="Edit" method="post">
    <fieldset class="FormContent">
        <div class="form-group row">
            <label asp-for="Name"
                   class="col-sm-3 col-form-label"></label>
            <div class="align-content-lg-stretch">
                <input asp-for="Name" class="form-control" />
                @*                <span asp-validation-for="Name"
                class="text-danger"></span>*@
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="EmailAddr"
                   class="col-sm-3 col-form-label"></label>
            <div class="align-content-lg-stretch">
                <input asp-for="EmailAddr" class="form-control" />
                @*                <span asp-validation-for="EmailAddr"
                class="text-danger"></span>*@
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="ContactNo"
                   class="col-sm-3 col-form-label"></label>
            <div class="align-content-lg-stretch">
                <input asp-for="ContactNo" class="form-control" />
                @*                <span asp-validation-for="PhoneNo"
                class="text-danger"></span>*@
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="Pwd"
                   class="col-sm-3 col-form-label"></label>
            <div class="align-content-lg-stretch">
                <input asp-for="Pwd" class="form-control" />
                @*                <span asp-validation-for="Pwd"
                class="text-danger"></span>*@
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="PasswordConfirm"
                   class="col-sm-3 col-form-label"></label>
            <div class="align-content-lg-stretch">
                <input asp-for="PasswordConfirm" class="form-control" />
                @*                <span asp-validation-for="PasswordConfirm"
                class="text-danger"></span>*@
            </div>
        </div>
        <div class="form-group row">
            <div class="col-sm-9 offset-sm-3">
                <input type="submit" value="Save"
                       class="btn btn-primary" />
            </div>
        </div>
        <div>
            <a asp-action="Details">Back to Profile</a>
        </div>
    </fieldset>
</form>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
