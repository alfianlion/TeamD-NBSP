@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html>
<head>
    <!-- Use Unicode character encoding - multi-language compatibity -->
    <meta charset="utf-8">
    <!-- Set the initial view zooming scale for mobile device -->
    <meta name="viewport" content="width = device-width,
 initial-scale = 1" />
    <style>

        .container{
            display: flex;
            justify-content: center;
        }

        .border-box {
            border-radius: 25px;
            background: #BEBED8;
            padding: 20px;
            width: 750px;
            height: 500px;
            color: white;
            text-align: center;
            font-size: 20px;
            display: flex;
            justify-content: center;
            align-items: center;
        }

        .myButton {
            margin: 10px;
            border-color: white;
            width: 30%;
        }

        .loginTitle {
            color: black;
        }

        .button-box {
            width: 100%;
            display: flex;
            flex-direction: column;
            align-content: center;
            text-align: center;
            justify-content: center;
            align-items: center;
        }

        #txtLoginID {
            height: 25px;
            border: 0px solid white;
            margin-left: auto;
            color: black;
        }

        #txtPassword {
            height: 25px;
            border: 0px solid white;
            color: black;
        }

        #heading {
            text-align: center;
            margin-top: 50px;
        }

        #legendtxt {
            text-align: center;
            font-size: 20px;
            margin-bottom: 50px;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="border-box">
            <form method="post" action="~/Home/Login">
                <strong><p class="loginTitle">Log In</p><br /></strong>
                <label for="txtLoginID" style="color: black">Username:</label>
                <input type="text" name="txtLoginID"
                       id="txtLoginID" style="border-radius:20px;"
                       required /><br /><br />
                <label for="txtPassword" style="color: black">Password:</label>
                <input type="password" name="txtPassword"
                       id="txtPassword" style="border-radius: 20px;"
                       required /><br /><br />
                <span style="color:red;">@TempData["Message"]</span><br />

                <div class="button-box">
                    <input type="submit" id="btnLogin"
                           class="myButton" style="background-color: #41C1BA;" value="Log In" />
                    <br />
                    <input type="button" id="btnSignUp"
                           class="myButton" onclick="location.href='@Url.Action("SignUp","Home")'" style="background-color: #365B6D" value="Sign Up ">
                </div>
            </form>
        </div>
    </div>
</body>
</html>