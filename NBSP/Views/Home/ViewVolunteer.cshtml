@model IEnumerable<NBSP.Models.Volunteer>

@if (Model.ToList().Count > 0)
{
    <div class="table-responsive">
        <table id="viewProduct" class="table table-striped table-bordered">
            <thead class="thead-dark">
                <tr>
                    <th>Name</th>
                    <th>Email</th>
                    <th>Phone Number</th>
                    <th>D.O.B</th>
                    <th>Gender</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                <tr>
                    <th>@item.Name</th>
                    <th>@item.EmailAddr</th>
                    <th>@item.ContactNo.ToString()</th>
                    <th>@item.DOB.ToString()</th>
                    <th>@item.Gender.ToString()</th>
                </tr>
                }
            </tbody>
        </table>
    </div>
}

else
{
    <span style="color:red">No volunteers found!</span>
}
